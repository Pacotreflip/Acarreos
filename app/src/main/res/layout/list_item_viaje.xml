<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?attr/listPreferredItemHeight"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/idCamion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56dp"
        android:text="Camion"
        android:textAppearance="?attr/textAppearanceListItem"
        tools:text="T00" />

    <TextView
        android:id="@+id/idMaterial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/idCamion"
        android:layout_below="@+id/idCamion"
        android:text="Material"
        tools:text="CEO" />

    <TextView
        android:id="@+id/idOrigen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/idCamion"
        android:layout_below="@+id/idMaterial"
        android:text="Origen"
        tools:text="Blue Insurances Ltd" />

    <TextView
        android:id="@+id/idDestino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/idCamion"
        android:layout_below="@+id/idOrigen"
        android:text="Destino"
        tools:text="Blue Iniddds Ltd" />

</RelativeLayout>